<Page
    x:Class="Senior_Project_V1.WelcomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Senior_Project_V1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="WelcomePage_Loaded">

    <Grid>
        <StackPanel>
            <TextBlock Margin="20,20,0,0" Name="Greetings"/>
            <Button Content="Weather" Name="weatherapp" Click="weatherapp_Click" Margin="20,20,0,0"/>
            <Button Content="Music" Name="musicapp" Click="musicapp_Click" Margin="20,20,0,0"/>
            <Button Content="Calendar" Name="calendarapp" Click="calendarapp_Click" Margin="20,20,0,0"/>
            <Button Content="Back" Name="backbutton" Click="backbutton_Click" Margin="20,20,0,0"/>
            
        </StackPanel>

    </Grid>
</Page>
