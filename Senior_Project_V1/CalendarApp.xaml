    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <RelativePanel>
            <Button Name="HomeButton" RelativePanel.AlignLeftWithPanel="True" FontFamily="Segoe MDL2 Assets"
